<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:background="@android:color/holo_orange_light">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/ho_ten"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtGuestName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/sdt"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtGuestSDT"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/guest_dia_chi"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtGuestAddress"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/packet_price"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtPacketPrice"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>